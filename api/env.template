# Minecraft Church Verification System API - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=minecraft_church
DB_USER=minecraft_api
DB_PASSWORD=your_database_password_here

# Database Connection Pool Settings (optional)
DB_CONNECTION_LIMIT=10
DB_CONNECTION_TIMEOUT=10000
DB_QUEUE_LIMIT=0
DB_TIMEZONE=UTC

# SSL Configuration (optional, for remote databases)
# DB_SSL=false
# DB_SSL_CA=
# DB_SSL_CERT=
# DB_SSL_KEY=

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=3000

# Security Settings
# Generate with: openssl rand -base64 32
API_SECRET=your_secure_random_secret_here_minimum_32_characters
ADMIN_TOKEN=your_admin_approval_token_here

# Verification Code Settings
CODE_EXPIRATION_MINUTES=15
CODE_LENGTH=6

# Polling Settings
GRANT_POLL_INTERVAL=30

# Integration Settings
WIX_FORM_URL=https://your-form-url.wixsite.com/verification

# CORS Configuration (optional)
# CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FILE=api.log

# Environment
NODE_ENV=development
